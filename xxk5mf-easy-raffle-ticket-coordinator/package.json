{
  "name": "raffle-ticket-coordinator",
  "version": "1.0.0",
  "private": true,
  "description": "Raffle coordinator: single install at root runs tests, client, server, and evaluation.",
  "scripts": {
    "test": "jest --config tests/jest.config.js --runInBand",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:ci": "jest --config tests/jest.config.js --json --no-coverage --runInBand",
    "evaluate": "npx ts-node evaluation/evaluation.ts",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npx ts-node repository_after/server/index.ts",
    "dev:client": "cd repository_after/client && npx vite",
    "build:client": "cd repository_after/client && npx tsc && npx vite build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/supertest": "^2.0.16",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
