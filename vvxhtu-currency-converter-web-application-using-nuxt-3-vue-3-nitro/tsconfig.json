{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "jest"],
    "paths": {
      "~/*": ["./repository_after/*"]
    }
  },
  "include": ["tests/**/*.ts", "repository_after/**/*.ts"],
  "exclude": ["node_modules", "dist", "repository_after/node_modules"]
}
