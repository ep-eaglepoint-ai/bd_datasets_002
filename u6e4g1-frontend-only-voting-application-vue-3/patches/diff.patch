+
+const voterName = ref("");
+const selected = ref<string[]>([]);
+const submitErrors = ref<string[]>([]);
+
+watchEffect(() => {
+  // keep selection sane when switching mode
+  if (!poll.value) return;
+  if (poll.value.votingMode === "single" && selected.value.length > 1) {
