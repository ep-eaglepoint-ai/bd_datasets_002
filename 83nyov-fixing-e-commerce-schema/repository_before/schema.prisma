generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Store {
  id          String      @id @default(uuid())
  name        String
  ownerId     String      
  billboards  Billboard[]
  categories  Category[]  
  products    Product[]  
  sizes       Size[]     
  colors      Color[]   
  orders      Order[]   
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Billboard {
  id          String @id @default(uuid())
  storeId     String
  store       Store    
  label       String
  imageUrl    String
  categories  Category[] 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id          String      @id @default(uuid())
  storeId     String
  billboardId String
  store       Store    
  billboard   Billboard 
  name        String
  products    Product[]  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Size {
  id        String   @id @default(uuid())
  storeId   String
  store     Store
  name      String
  value     String
  products  Product[] 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Color {
  id        String   @id @default(uuid())
  storeId   String
  store     Store
  name      String
  value     String
  products  Product[] 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String    @id @default(uuid())
  storeId     String   
  store       Store   
  categoryId  String
  category    Category  
  name        String
  price       Decimal
  isFeatured  Boolean   @default(false)
  isArchived  Boolean   @default(false)
  sizeId      String
  size        Size  
  colorId     String
  color       Color  
  images      Image[] 
  orderItems  OrderItem[] 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Image {
  id        String   @id @default(uuid())
  productId String
  product   Product  
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

model Order {
  id         String      @id @default(uuid())
  storeId    String
  store      Store   
  orderItems OrderItem[] 
  isPaid     Boolean     @default(false)
  phone      String
  address    String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   
  productId String
  product   Product

  @@index([orderId])
  @@index([productId])
}

