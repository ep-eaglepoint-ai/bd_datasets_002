{
  "name": "iot-sensor-dashboard",
  "version": "1.0.0",
  "description": "IoT Sensor Stream Dashboard - Fullstack Application",
  "private": true,
  "workspaces": [
    "repository_after/server",
    "repository_after/client"
  ],
  "scripts": {
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest --config jest.config.js --testPathPattern=tests/backend",
    "test:frontend": "cd repository_after/client && npm test",
    "install:all": "npm install && cd repository_after/server && npm install && cd ../client && npm install",
    "dev:server": "cd repository_after/server && npm run dev",
    "dev:client": "cd repository_after/client && npm run dev",
    "evaluation": "node evaluation/evaluation.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "commander": "^11.1.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
