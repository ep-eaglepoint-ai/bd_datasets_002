{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "dom"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "jsx": "react-jsx"
  },
  "include": [
    "evaluation/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "repository_after/.next"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
