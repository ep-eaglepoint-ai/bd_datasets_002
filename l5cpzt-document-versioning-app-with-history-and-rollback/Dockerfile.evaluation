FROM python:3.12-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the entire project structure
COPY . .

# Create evaluation directory and ensure it's executable
RUN mkdir -p evaluation && chmod +x evaluation/evaluation.py

# Default command runs evaluation with JSON output
CMD ["python", "evaluation/evaluation.py", "--json-output", "evaluation/results.json"]
