{
  "name": "feature-flag-management-system-root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "jest --rootDir .",
    "test:watch": "jest --watch --rootDir .",
    "eval": "npx tsx evaluation/evaluation.ts",
    "db:generate": "cd repository_after && npx prisma generate",
    "db:push": "cd repository_after && npx prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "uuid": "^9.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": ".",
    "testMatch": ["<rootDir>/tests/**/*.test.ts"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/repository_after/src/$1",
      "^src/(.*)$": "<rootDir>/repository_after/src/$1"
    },
    "transform": {
      "^.+\\.ts$": ["ts-jest", {
        "tsconfig": "<rootDir>/tsconfig.json"
      }]
    }
  }
}
