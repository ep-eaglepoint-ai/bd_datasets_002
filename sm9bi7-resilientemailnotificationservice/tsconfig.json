{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "repository_before/**/*.ts",
    "repository_after/**/*.ts",
    "tests/**/*.ts",
    "evaluation/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
