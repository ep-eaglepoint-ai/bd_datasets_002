# Dockerfile for running tests
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY repository_after ./repository_after/ 2>/dev/null || true

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Install test dependencies
RUN npm install

# Create coverage directory
RUN mkdir -p /app/coverage

# Set permissions for coverage directory
RUN chmod 777 /app/coverage

# Run tests
CMD ["npm", "run", "test:run"]
