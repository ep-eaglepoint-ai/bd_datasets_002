{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true,
    "transpileOnly": true 
  },
  "include": ["repository_after/**/*", "repository_before/**/*", "tests/**/*"]
}
