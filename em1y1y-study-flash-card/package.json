{
  "name": "flash-card-study-evaluation",
  "version": "1.0.0",
  "description": "Flash Card Study App Evaluation Suite",
  "private": true,
  "scripts": {
    
    "test:watch": "jest --watch",
    "test:after": "REPO_PATH=repository_after jest --config jest.config.js --verbose",
    "test": "jest --config jest.config.js --verbose",
    "evaluation": "tsx evaluation/evaluation.ts"
  },
  "dependencies": {
    "next": "16.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.7",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.3.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.spec.ts",
      "<rootDir>/tests/**/*.spec.tsx"
    ]
  }
}
