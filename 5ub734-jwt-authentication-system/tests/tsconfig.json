{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@server/*": ["../server/src/*"],
      "@client/*": ["../client/src/*"],
      "*": ["node_modules/*", "node_modules/@types/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [".", "../server/src/**/*", "../client/src/**/*"]
}
