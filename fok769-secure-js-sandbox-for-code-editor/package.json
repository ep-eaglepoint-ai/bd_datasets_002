{
  "name": "fok769-secure-js-sandbox",
  "version": "1.0.0",
  "description": "Secure JavaScript sandbox for code editor",
  "scripts": {
    "test": "node tests/test-runner.js",
    "test:direct": "jest --testPathPattern=tests/sandbox.test.js",
    "test:meta": "jest tests/meta.test.js",
    "evaluation": "node evaluation/evaluation.js"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "playwright": "^1.40.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 60000
  }
}
