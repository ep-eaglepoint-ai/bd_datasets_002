{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["./repository_after/contact-manager/src/*"]
    }
  },
  "include": ["tests/**/*"]
}
