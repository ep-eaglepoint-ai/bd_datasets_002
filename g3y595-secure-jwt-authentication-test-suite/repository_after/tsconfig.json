{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "jsx": "react",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../repository_before/src/**/*.ts",
    "../repository_before/src/**/*.tsx"
  ]
}
