+import { usePdfGeneration } from './composables/usePdfGeneration'
+import type { ImageFile, PdfOptions as PdfOptionsType } from './types'
+
+// Composables
+const { images, addImages, reorderImages, removeImage, error } = useImageUpload()
+const { 
+  generatePdf, 
+  isConverting, 
+  conversionProgress, 
+  currentStep 
+} = usePdfGeneration()
+
+// PDF Options
+const pdfOptions = ref<PdfOptionsType>({
+  pageSize: 'A4',
+  orientation: 'portrait',
+  imageFit: 'fit',
+  filename: 'converted-images'
+})
+
+// Event Handlers
+const handleFilesSelected = (files: File[]) => {
+  addImages(files)
+}
+
+const handleReorder = (newOrder: ImageFile[]) => {
+  reorderImages(newOrder)
+}
+
+const handleRemove = (index: number) => {
+  removeImage(index)
+}
+
+const handleConvert = async () => {
+  if (images.value.length === 0) return
+  
+  try {
+    await generatePdf(images.value, pdfOptions.value)
+  } catch (err) {
+    error.value = err instanceof Error ? err.message : 'Failed to generate PDF'
+  }
+}
