{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@controller": ["./repository_after/telecomTopUP.controller", "./repository_before/telecomTopUP.controller"]
    }
  },
  "include": [
    "repository_before/**/*.ts",
    "repository_after/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/node_modules"]
}
