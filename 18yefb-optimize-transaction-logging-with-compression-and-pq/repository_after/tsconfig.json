{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@controller": ["./telecomTopUP.controller"]
    }
  },
  "include": ["./**/*.ts", "../tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}