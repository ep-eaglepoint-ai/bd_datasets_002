{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": ["tests/**/*.ts", "repository_after/src/**/*.ts", "repository_before/**/*.ts"],
  "exclude": ["node_modules", "repository_after/dist"]
}
